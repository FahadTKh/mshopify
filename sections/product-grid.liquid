{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop Our Best Sellers"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "checkbox",
          "id": "bestseller",
          "label": "Show Bestseller Badge",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "category": "Shampoo",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

<section class="product-grid">
  <h2 class="grid-heading">{{ section.settings.heading }}</h2>
  <div class="grid-container">
    {% for block in section.blocks %}
      {% if block.settings.product != blank %}
        {%- assign product = all_products[block.settings.product] -%}
        <div class="product-card">
          {% if block.settings.bestseller %}
            <span class="bestseller-badge">Bestseller</span>
          {% endif %}

          <a href="{{ product.url }}" class="product-image">
            <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}">
          </a>

          <div class="product-info">
            <div class="rating"><span class="star">‚≠ê</span> 4.5 <span class="reviews">(1425)</span></div>
            <h3 class="product-title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <p class="product-description">{{ product.description | truncate: 100 }}</p>
            <button class="add-to-cart-btn" onclick="addToCart('{{ product.variants.first.id }}')">
              Add to Cart - {{ product.price | money }}
            </button>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
  .product-grid {
    padding: 50px;
    text-align: center;
    background: #fffaf0;
  }

  .grid-heading {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    justify-content: center;
  }

  .product-card {
    background: #fff;
    padding: 15px;
    border-radius: 10px;
    border: 1px solid #eee;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    position: relative;
    text-align: left;
  }

  .bestseller-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #ff5722;
    color: white;
    padding: 5px 10px;
    font-size: 12px;
    font-weight: bold;
    border-radius: 5px;
  }

  .product-image img {
    width: 100%;
    border-radius: 10px;
  }

  .product-info {
    padding: 10px;
  }

  .rating {
    font-size: 14px;
    color: #ff9800;
  }

  .product-title {
    font-size: 18px;
    font-weight: bold;
    margin: 5px 0;
  }

  .product-description {
    font-size: 14px;
    color: #666;
    margin-bottom: 10px;
  }

  .add-to-cart-btn {
    background: #000;
    color: #fff;
    padding: 10px;
    width: 100%;
    border: none;
    cursor: pointer;
    border-radius: 5px;
  }

  .add-to-cart-btn:hover {
    background: #333;
  }
</style>

<script>
  function addToCart(variantId) {
    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ quantity: 1, id: variantId })
    })
    .then(response => response.json())
    .then(data => alert('Added to Cart!'))
    .catch(error => console.error('Error:', error));
  }
</script>
