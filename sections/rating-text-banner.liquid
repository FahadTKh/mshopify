{% schema %}
{
  "name": "Rating Text Banner",
  "settings": [
    {
      "type": "range",
      "id": "rating",
      "label": "Star Rating",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 5
    },
    {
      "type": "text",
      "id": "review_text",
      "label": "Review Text",
      "default": "5,000+ TRUSTED REVIEWS - 100% SAW FEWER FLAKES IN 30 DAYS"
    }
  ],
  "presets": [
    {
      "name": "Rating Text Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="rating-text-banner">
  <div class="rating-stars">
    {% for i in (1..section.settings.rating) %}
      <span class="star">â˜…</span>
    {% endfor %}
  </div>
  <span class="review-text">{{ section.settings.review_text }}</span>
</div>

<style>
  .rating-text-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
